
@{
    Layout = null;
}

@model User
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <style>
        .text-center {
        background-color: #0d6efd;
        color: white;
        }

        .gradient-custom {
        /* fallback for old browsers */
        background: #f093fb;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to bottom right, rgba(240, 147, 251, 1), rgba(245, 87, 108, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to bottom right, rgba(240, 147, 251, 1), rgba(245, 87, 108, 1));
        height:100%;
        display : flex;
        }

        .card-registration .select-input.form-control[readonly]:not([disabled]) {
        font-size: 1rem;
        line-height: 2.15;
        padding-left: .75em;
        padding-right: .75em;
        }

        .card-registration .select-arrow {
        top: 13px;
        }

        .card-body {
            background-color : #454545;
            color: #D3D3D3;
        }
    </style>
</head>
<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
                            <form asp-controller="Admin" asp-action="Registration">

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input asp-for="UserId" class="form-control form-control-lg" required />
                                            <label asp-for="UserId" class="form-label">User Id</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input asp-for="Name" class="form-control form-control-lg" required />
                                            <label asp-for="Name" class="form-label">Full Name</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 d-flex align-items-center">

                                        <div data-mdb-input-init class="form-outline datepicker w-100">
                                            <input asp-for="MobileNumber" class="form-control form-control-lg" required />
                                            <label asp-for="MobileNumber" class="form-label">Mobile Number</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <h6 class="mb-2 pb-1">Gender: </h6>

                                        <div class="form-check form-check-inline">
                                            <input asp-for="Gender" class="form-check-input" type="radio" value="Male" checked />
                                            <label class="form-check-label" asp-for="Gender">Male</label>
                                        </div>

                                        <div class="form-check form-check-inline">
                                            <input asp-for="Gender" class="form-check-input" type="radio" value="Female"/>
                                            <label class="form-check-label" asp-for="Gender">Female</label>
                                        </div>

                                        <div class="form-check form-check-inline">
                                            <input asp-for="Gender" class="form-check-input" type="radio" value="Others" />
                                            <label class="form-check-label" asp-for="Gender">Others</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="email" asp-for="Email" class="form-control form-control-lg" required />
                                            <label class="form-label" asp-for="Email">Email</label>
                                        </div>

                                    </div>

                                    <div class="col-md-6 mb-4">

                                        <h6 class="mb-2 pb-1">Role: </h6>

                                        <div class="form-check form-check-inline">
                                            <input asp-for="Role" class="form-check-input" type="radio" value="Admin" checked />
                                            <label class="form-check-label" asp-for="Role">Admin</label>
                                        </div>

                                        <div class="form-check form-check-inline">
                                            <input asp-for="Role" class="form-check-input" type="radio" value="User" />
                                            <label class="form-check-label" asp-for="Role">User</label>
                                        </div>

                                        <div class="form-check form-check-inline">
                                            <input asp-for="Role" class="form-check-input" type="radio" value="Finance" />
                                            <label class="form-check-label" asp-for="Role">Finance</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 pb-2">
                                        <div data-mdb-input-init class="form-outline">
                                            <input type="date" asp-for="Dob" class="form-control form-control-lg" required />
                                            <label class="form-label" asp-for="Dob">Date of Birth</label>
                                        </div>
                                    </div>

                                    <div class="col-md-6 mb-4 pb-2">
                                        <div data-mdb-input-init class="form-outline">
                                            <input type="password" asp-for="Pwd" class="form-control form-control-lg" required />
                                            <label class="form-label" asp-for="Pwd">Password</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        @{
                                            List<string> li = new List<string> { "Hyderabad" , "Andhra Pradesh" , "Banglore" , "Chennai" , "New Delhi" , "Mumbai" , "Pune" , "Goa"  };
                                            SelectList cityList = new SelectList(li);
                                        }
                                        <select asp-for="Location" asp-items="cityList" class="select form-control-lg">
                                            <option value="">-----Select Location-----</option>
                                        </select>
                                        <label class="form-label select-label">Choose Location</label>
                                    </div>
                                </div>
                                   
                                <div class="mt-4 pt-2">
                                    <input data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Submit" />
                                    <input data-mdb-ripple-init class="btn btn-secondary btn-lg" type="reset" value="Clear" />
                                    <a asp-action="Login" asp-controller="Admin" class="btn btn-secondary">
                                        <i class="bi bi-skip-backward-fill"></i>
                                        Back to Login
                                    </a>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
