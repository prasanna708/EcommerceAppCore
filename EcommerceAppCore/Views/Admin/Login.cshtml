
@{
    Layout = null;
}

@model User
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <style>
        .text-center {
            background-color: #0d6efd;
            color: white;
        }
    </style>

</head>
<body>
    <div>
        <partial name="_Notification" />
    </div>
    <div class="container">
        <h2 class="text-center m-3">Login Form</h2>
        <form asp-controller="Admin" asp-action="Login">
            <table align="center" cellpadding="8">
                <tr>
                    <td>
                        <label asp-for="UserId">User Id:</label>
                    </td>
                    <td>
                        <input asp-for="UserId" placeholder="Enter User Id" class="form-control" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="Pwd">Password:</label>
                    </td>
                    <td>
                        <input asp-for="Pwd" type="password" placeholder="Enter Password" class="form-control" />
                        <span asp-validation-for="Pwd" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        @if (TempData["success"] != null)
                        {
                            <span class="text-primary">
                                @TempData["success"]
                            </span>
                        }
                        else if (TempData["error"] != null)
                        {
                            <span class="text-danger">
                                @TempData["error"]
                            </span>
                        }
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <a asp-action="Registration" asp-controller="Admin">Register</a>
                    </td>
                </tr>
            </table>
        </form>
    </div>

</body>
</html>
