
@{
    Layout = null;
}

@model User
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <style>
        body {
            background: linear-gradient(to bottom, #3A8DFF, #A7C5F2);
            height: 100vh;
            margin: 0;
            display: flex;
            /* justify-content: center; */
            /* align-items: center; */
            font-family: Arial, sans-serif;
            color : #666666;
        }
        .container {
            border : 2px solid black;
            border-radius : 8px;
            background-color : ghostwhite;
            box-shadow : 2px 6px red;
            margin : 150px;
            margin-left : 500px;
            margin-right : 500px;
            margin-bottom : 250px;
        }
    </style>

</head>
<body>
    <div>
        <partial name="_Notification" />
    </div>
    <div class="container">
        <h2 class="text-center text-black bg-secondary m-3">Login Form</h2>
        <form asp-controller="Admin" asp-action="Login">
            <table align="center" cellpadding="8">
                <tr>
                    <td>
                        <label asp-for="UserId">User Id:</label>
                    </td>
                    <td>
                        <input asp-for="UserId" placeholder="Enter User Id" class="form-control" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="Pwd">Password:</label>
                    </td>
                    <td>
                        <input asp-for="Pwd" type="password" placeholder="Enter Password" class="form-control" />
                        <span asp-validation-for="Pwd" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <button type="submit" class="btn btn-warning">Login</button>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        @if (TempData["success"] != null)
                        {
                            <span class="text-primary">
                                @TempData["success"]
                            </span>
                        }
                        else if (TempData["error"] != null)
                        {
                            <span class="text-danger">
                                @TempData["error"]
                            </span>
                        }
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <a asp-action="Registration" asp-controller="Admin" style="color:#1A73E8;">Register</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <a asp-action="Home" asp-controller="Admin" style="color:#1A73E8;">Back to Home Page</a>
                    </td>
                </tr>
            </table>
        </form>
    </div>

</body>
</html>
