@model List<PurchaseAuditLog>

@{
    ViewData["Title"] = "ViewOrders";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2 class="text-center bg-success">View Orders</h2>

@if(Model != null && Model.Any())
{
    <div>
        <table class="table">
            <tr>
                <th>Order Number</th>
                <th>Order Id</th>
                <th>Product Id</th>
                <th>User Id</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Order Date and Time</th>
                <th>Photo</th>
                <th>Total Price</th>
            </tr>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.OrderNumber</td>
                    <td>@product.OrderId</td>
                    <td>@product.ProductId</td>
                    <td>@product.UserId</td>
                    <td>@product.ProductName</td>
                    <td>@product.Quantity</td>
                    <td>@product.OrderDateAndTime</td>
                    <td>
                        <img src="@Url.Content("~/" + product.Photo)" height="40" width="80" alt="@product.ProductName" />
                    </td>
                    <td>&#8377;@product.TotalPrice</td>
                </tr>
            }
            <tr>
                <td colspan="9" align="right">
                    @if (ViewBag.TotalPrice != null)
                    {
                        <h3 class="text-success text-lg-end">
                            &#8377;@ViewBag.TotalPrice
                        </h3>
                    }
                </td>
            </tr>
        </table>
    </div>
}
else
{
    <br />
    <center>
        <img src="d:\.net\tasks\ecommerceappcore\ecommerceappcore\wwwroot\images\shop.jpg" width="222" height="162" alt="no image" />
        <br /><br /><br />
        <p class="text-danger">No Orders Placed Yet!</p>
        <br />
        @Html.ActionLink("View Cart", "ViewCart", null, new { @class = "btn btn-secondary" })
    </center>
}